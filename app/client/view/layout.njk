<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1,minimum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block header %}
    <title>Document</title>
    {% endblock %}
    {% block link %}
    <link rel="stylesheet" href="/public/css/reset.css?rev=@@hash">
    <link rel="stylesheet" href="/public/iconfont/iconfont.css?rev=@@hash">
    {% endblock %}
</head>
<body>
{% block content %}
{% endblock %}

{% block script %}
<script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
<script src="https://cdn.bootcss.com/nunjucks/3.0.1/nunjucks.js"></script>
<script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
{% endblock %}
</body>
</html>
{% macro field(name, type='text', value='') %}
<div>
    <lable for="{{name}}">{{ name }}:</lable>
    <input type="{{type}}" name="{{name}}" value="{{value | escape}}" id="{{name}}">
</div>
{% endmacro %}